	<script type="text/javascript">
		function my_submit() {
			//Bắt lỗi
			let error ="";
			const productId = document.querySelector("#productId").value;
			if (productId.length == 0) {
				error = "Bạn phải nhập mã sản phẩm";
			}		
			if(error.length > 0) {
				alert(error);
				return;
			}else {
				const myForm = document.querySelector("#my_form");
				myForm.submit();
			}					
		}
	</script>
